# Database Configuration
# DATABASE_URL=postgresql://up_crawler:up_crawler@localhost:5432/up_crawler

# Logging
LOG_LEVEL=info

# Puppeteer Configuration
PUPPETEER_HEADLESS=false
PUPPETEER_TIMEOUT=30000
PUPPETEER_USER_DATA_DIR=./user-data

# Upwork Configuration
UPWORK_LOGIN_URL=https://www.upwork.com/ab/account-security/login

# Residential Proxy (Decodo)
PROXY_HOST=us.decodo.com        # country.decodo.com format (e.g., us.decodo.com)
PROXY_PORT=10000                # Decodo default port
PROXY_USER=user-blabla          # your session ID (without country/zip flags)
PROXY_PASS=your_password        # your proxy password
PROXY_COUNTRY=us                # country code (e.g., us|uk|sg|ua)
PROXY_ZIP_CODE=94102            # zip code for location targeting
PROXY_ROTATE_MINUTES=10         # sticky duration per run (set manually)
